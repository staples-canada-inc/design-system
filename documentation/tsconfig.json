{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "declaration": true,
        "sourceMap": false,
        "baseUrl": "src",
        "rootDir": "src",
        "outDir": "dist",
        "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
        "paths": {
            "~styles/*": ["src/theme/styles/*"],
            "~utils/*": ["src/theme/utils/*"],
            "@fonts/*": ["public/fonts/*"],
            "@images/*": ["public/images/*"],
            "@styles/*": ["public/css/*"]
        }
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules/**"]
}